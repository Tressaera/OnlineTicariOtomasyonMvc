@using OnlineTicariOtomasyonMvc.Models.Siniflar
@model List<SatisHareket>

@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count == 0)
{
    <div class="row">
        <div class="col-xl-12">
            <div class="card mb-3">
                <div class="card-header"><i class="fas fa-arrows-alt"></i> @ViewBag.PersonelAdSoyad Satış Listesi</div>
                <div class="card-body">
                    <h3>@ViewBag.PersonelAdSoyad henüz bir satış yapmamış.</h3>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-xl-12">
            <div class="card mb-3">
                <div class="card-header"><i class="fas fa-arrows-alt"></i> @ViewBag.PersonelAdSoyad Satış Listesi</div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ürün Bilgisi</th>
                                <th>Cari Bilgisi</th>
                                <th>Adet</th>
                                <th>Fiyat</th>
                                <th>Toplam Tutar</th>
                                <th>Tarih</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SatisID</td>
                                    <td>@item.Urun.UrunAd</td>
                                    <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
                                    <td>@item.Fiyat</td>
                                    <td>@item.Adet</td>
                                    <td>@item.ToplamTutar</td>
                                    <td>@(((DateTime)item.Tarih).ToString("dd MMMM yyyy"))</td>
                                    <td class="text-right">
                                        <div class="dropdown">
                                            <a class="btn btn-sm btn-icon-only text-dark" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fa fa-ellipsis-v"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                <a class="dropdown-item" href="#"><i class="fa fa-file mx-0"></i> Yazdır</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}