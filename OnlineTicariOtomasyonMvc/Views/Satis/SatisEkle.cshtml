@model OnlineTicariOtomasyonMvc.Models.Siniflar.SatisHareket

@{
    ViewBag.Title = "SatisEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card mb-3">
            <div class="card-header"><i class="fas fa-folder-open"></i> Satış Ekleme Sayfası</div>
            <div class="card-body">
                <form method="post" class="forms-sample">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> Ürün Bilgisi : </span>
                        </div>
                        @Html.DropDownListFor(x => x.UrunID, (List<SelectListItem>)ViewBag.urunAd, "Ürün Seçiniz.", new { @class = "form-control" })
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> Cari Bilgisi : </span>
                        </div>
                        @Html.DropDownListFor(x => x.CariID, (List<SelectListItem>)ViewBag.cariAd, "Cari Seçiniz.", new { @class = "form-control" })
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> Personel Bilgisi : </span>
                        </div>
                        @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.personelAd, "Personel Seçiniz.", new { @class = "form-control" })
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> Adet : </span>
                        </div>
                        <input type="number" name="Adet" class="form-control" placeholder="Adet giriniz." aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> Fiyat : </span>
                        </div>
                        <input type="text" name="Fiyat" class="form-control" placeholder="Fiyat giriniz." aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> Toplam Tutar : </span>
                        </div>
                        <input type="text" name="ToplamTutar" class="form-control" placeholder="Toplam tutar giriniz." aria-describedby="basic-addon1">
                    </div>
                    <button type="submit" class="btn btn-outline-primary me-2 col-12">Yeni Satış Ekle!</button>
                </form>
            </div>
        </div>
    </div>
</div>