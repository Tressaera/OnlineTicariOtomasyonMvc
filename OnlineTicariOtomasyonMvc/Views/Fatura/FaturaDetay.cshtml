@using OnlineTicariOtomasyonMvc.Models.Siniflar
@model List<FaturaKalem>

@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card mb-3">
            <div class="card-header"><i class="fas fa-newspaper"></i> Fatura Detay Sayfası</div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Açıklama</th>
                            <th>Miktar</th>
                            <th>Birim Fiyat</th>
                            <th>Toplam Tutar</th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FaturaKalemID</td>
                                <td>@item.Aciklama</td>
                                <td>@item.Miktar</td>
                                <td>@item.BirimFiyat</td>
                                <td>@item.Tutar</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Fatura/FaturaKalemEkle" class="btn btn-outline-primary col-12">Yeni Fatura Kalem Oluştur!</a>
            </div>
        </div>
    </div>
</div>