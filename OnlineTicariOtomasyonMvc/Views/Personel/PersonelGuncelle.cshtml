@model  OnlineTicariOtomasyonMvc.Models.Siniflar.Personel

@{
    ViewBag.Title = "PersonelGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card mb-3">
            <div class="card-header"><i class="fas fa-table"></i> Ürün Ekleme Sayfası</div>
            <div class="card-body">
                <form method="post" class="forms-sample">
                    @Html.HiddenFor(x => x.PersonelID)
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> Personel Görseli : </span>
                        </div>
                        @Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control" })
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> Personel Adı : </span>
                        </div>
                        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> Personel Soyadı : </span>
                        </div>
                        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> Personel Departmanı : </span>
                        </div>
                        @Html.DropDownListFor(x => x.DepartmanID, (List<SelectListItem>)ViewBag.departmanAd, "Kategori Seçiniz.", new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-outline-primary me-2 col-12">Ürünü Güncelle!</button>
                </form>
            </div>
        </div>
    </div>
</div>